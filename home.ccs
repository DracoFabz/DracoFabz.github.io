body {
  margin: 0;
  font-family: Arial, sans-serif;
  background-color: #f5f5f5;
}

.taskbar {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  background-color: #222;
  color: white;
  padding: 10px 20px;
  position: relative;
}

.user-info {
  position: relative;
  cursor: pointer;
}

.user-info img {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  vertical-align: middle;
}

.user-info span {
  margin-left: 10px;
  vertical-align: middle;
}

.dropdown {
  display: none;
  position: absolute;
  top: 60px;
  right: 0;
  background: #fff;
  border: 1px solid #ccc;
  padding: 10px;
  width: 200px;
  z-index: 100;
  box-shadow: 0 2px 5px rgba(0,0,0,0.3);
}

.dropdown input[type=\"text\"],
.dropdown input[type=\"file\"] {
  width: 100%;
  margin: 5px 0;
}

.dropdown button {
  width: 100%;
  margin-top: 5px;
  padding: 5px;
}

.menu {
  text-align: center;
  margin-top: 100px;
}

.menu button {
  display: inline-block;
  margin: 10px 20px;
  padding: 20px 40px;
  font-size: 18px;
  cursor: pointer;
}
